<br/>
<div class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-primary">
          <div class="panel-heading">Danh sách kho hàng</div>
          <div class="panel-body">
            <div class="well">
              <div class="row">
                <div class="col-md-3">
                  <div class="btn-group" role="group">
                    <%= link_to 'Tạo Mới', new_stock_path, class: 'btn btn-success' %>
                  </div>
                </div>
              </div>
            </div>
            <br/>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Tên Kho</th>
                  <th>Địa Chỉ</th>
                  <th>Người Quản Lý</th>
                  <th>Thông Tin Phụ</th>
                  <th colspan="3">Tùy Chọn</th>
                </tr>
              </thead>
              <tbody>
                <% @stocks.each do |stock| %>
                  <tr>
                    <td><%= stock.sto_name %></td>
                    <td><%= stock.sto_address %></td>
                    <td><%= stock.sto_manager%></td>
                    <td><%= stock.sto_desc %></td>
                    
                    <td><%= link_to 'Chi Tiết', stock, class: :detail_link %></td>
                    <td><%= link_to 'Chỉnh Sửa',edit_stock_path(stock), class: :edit_link %></td>
                    <td><%= link_to 'Xóa', stock, class: :delete_link, method: :delete, data: { confirm: 'Xác Nhận Xóa ?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="panel-footer">
            <%= will_paginate @stocks, renderer: BootstrapPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>